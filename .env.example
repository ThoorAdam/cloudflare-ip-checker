# Cloudflare API Token
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone > DNS > Edit
CLOUDFLARE_API_TOKEN=your_api_token_here

# Cloudflare Zone ID
# Found on your domain's overview page in the Cloudflare dashboard
CLOUDFLARE_ZONE_ID=your_zone_id_here

# DNS record names to update (JSON array)
# The script will automatically find these records in your zone
CLOUDFLARE_ALLOWED_RECORDS=["home.thoor.me","*.home.thoor.me"]

# How often to check for IP changes (in minutes)
# Default: 5 minutes
CHECK_INTERVAL_MINUTES=5
